# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=slm_user
DB_PASSWORD=your_secure_password_here
DB_NAME=action_history
DB_SSL_MODE=disable

# Database Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_CONN_MAX_IDLE_TIME=5m

# Logging Configuration
LOG_LEVEL=info

# Security Notes:
