# HolmesGPT REST API Configuration
# Copy this file to .env and customize the values

# Application Configuration
APP_NAME=HolmesGPT REST API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG_MODE=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_FILE=

# Security Configuration
ENABLE_CORS=true
CORS_ORIGINS=*
API_KEY_REQUIRED=false
API_KEY=

# Documentation Configuration
ENABLE_DOCS=true
DOCS_URL=/docs
REDOC_URL=/redoc

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# HolmesGPT Configuration
HOLMES_DIRECT_IMPORT=true
HOLMES_CLI_FALLBACK=true
HOLMES_CLI_PATH=holmes
HOLMES_WORKING_DIR=/tmp/holmes-sessions
HOLMES_CONFIG_PATH=

# HolmesGPT LLM Provider Configuration
HOLMES_LLM_PROVIDER=openai
HOLMES_LLM_API_KEY=
HOLMES_LLM_BASE_URL=
HOLMES_LLM_MODEL=

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=
OPENAI_ORGANIZATION=

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Anthropic Configuration
ANTHROPIC_API_KEY=

# Default HolmesGPT Options
HOLMES_DEFAULT_MODEL=gpt-oss:20b
HOLMES_DEFAULT_MAX_TOKENS=4000
HOLMES_DEFAULT_TEMPERATURE=0.3
HOLMES_DEFAULT_TIMEOUT=300
HOLMES_ENABLE_STREAMING=true
HOLMES_ENABLE_DEBUG=false

# Ollama Configuration
LLM_ENDPOINT=http://localhost:11434
LLM_TIMEOUT=30
LLM_VERIFY_SSL=true

# Ramalama Configuration
RAMALAMA_URL=http://localhost:8080
RAMALAMA_TIMEOUT=30
RAMALAMA_VERIFY_SSL=true

# Kubernetes Configuration
KUBE_CONFIG_PATH=
KUBE_IN_CLUSTER=false
KUBE_NAMESPACE=

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_TIMEOUT=30
PROMETHEUS_VERIFY_SSL=true

# AlertManager Configuration
ALERTMANAGER_URL=http://localhost:9093
ALERTMANAGER_TIMEOUT=30
ALERTMANAGER_VERIFY_SSL=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=600
BACKGROUND_TASKS_ENABLED=true

# Development Configuration
RELOAD_ON_CHANGE=true
PROFILING_ENABLED=false
TEST_MODE=false

# External Services Configuration (JSON format)
EXTERNAL_SERVICES={}

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# Database Configuration (if needed in the future)
DATABASE_URL=postgresql://user:password@localhost:5432/holmesgpt
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
